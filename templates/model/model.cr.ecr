require "clear"

class <%= opts["model_class"] %>
  include Clear::Model

  self.table = "<%= opts["model_table"] %>"

  with_serial_pkey

  <%- opts["model_fields"].split("|").reject(&.empty?).each do |f| -%>
  <%- name, type = f.split(":").map(&.underscore) -%>
  <%- type ||= "string" -%>
  column <%=name%> : <%=type.camelcase%>
  <%- end -%>

  timestamps
end
